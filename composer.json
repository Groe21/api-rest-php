{
  "name": "api-rest-php",
  "description": "Proyecto API REST para gestionar estudiantes con PHP y PostgreSQL",
  "type": "project",
  "require": {
    "php": "^7.4 || ^8.0",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.0",
    "vlucas/phpdotenv": "^5.0",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}